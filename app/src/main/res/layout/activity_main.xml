<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco"
    android:padding="32dp">

    <!-- Círculos decorativos de fondo -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_turquesa"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-80dp" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_turquesa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginStart="-60dp" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_turquesa"
        android:layout_centerInParent="true"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="100dp" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Icono de la app -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icono_tasky"
            android:layout_marginBottom="20dp" />

        <!-- Título TASKY con efecto de borde -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <!-- Texto exterior (turquesa) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASKY"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/turquesa" />

            <!-- Texto interior (oscuro) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASKY"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@color/oscuro"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp" />

        </RelativeLayout>

        <!-- Campo de Usuario -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/turquesa"
            app:hintTextColor="@color/oscuro">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:inputType="text"
                android:textColor="@color/oscuro"
                android:textColorHint="@color/oscuro"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de Contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/turquesa"
            app:hintTextColor="@color/oscuro">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/oscuro"
                android:textColorHint="@color/oscuro"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkbox Recordarme -->
        <CheckBox
            android:id="@+id/cbRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recordarme"
            android:textColor="@color/oscuro"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- Botón Entrar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/turquesa"
            android:textColor="@color/Blanco"
            android:padding="16dp"
            android:elevation="4dp" />

    </LinearLayout>

</RelativeLayout>