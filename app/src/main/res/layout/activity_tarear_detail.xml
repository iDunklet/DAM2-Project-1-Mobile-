<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TarearDetailActivity">

    <FrameLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rect_turquesa_height"
        android:layout_alignParentTop="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_turquesa" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/flecha"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de tarea"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="56dp" />
        <TextView
            android:id="@+id/txtTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="30dp"/>
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la tarea"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/oscuro"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n de la tarea"
                android:textSize="20sp"
                android:textColor="@color/oscuro"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/txtTaskUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignado a: "
                android:textSize="16sp"
                android:textColor="@color/oscuro"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtTaskDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desde: - Hasta: -"
                android:textSize="16sp"
                android:textColor="@color/oscuro"
                android:layout_marginBottom="12dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/oscuro"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectanglestatus"
                android:padding="50dp">
                <LinearLayout
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginLeft="15dp"/>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="3dp"
                        android:background="@color/oscuro"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txtSinEmpezar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin Empezar"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txtEnProceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En Proceso"
                        android:textSize="20sp"
                        android:textColor="@color/oscuro"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txtHecho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hecho"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnEmpezar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Empezar"
                    android:backgroundTint="@color/oscuro"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"/>
                <Button
                    android:id="@+id/btnTerminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="Terminal"
                    android:backgroundTint="@color/naranja"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"/>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
