<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/turquesa_transparente"
    tools:context=".activities.ProjectDetailActivity">

    <!-- 1. ENCABEZADO (HEADER) -->
    <FrameLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Flecha Atrás -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical|start"
            app:tint="@color/naranja"/>
        <!-- Nota: usa tu icono de flecha aquí -->

        <!-- Título y Estrella -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proyecto 1"
                android:textColor="@color/oscuro"
                android:textStyle="bold"
                android:textSize="22sp" />

            <!-- Estrella (puedes usar un drawable vector asset) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/estrella"
                app:tint="#FBC02D"/>
        </LinearLayout>

        <!-- Miembros (lado derecho) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|end"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miembros"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </FrameLayout>

    <!-- 2. TABS (PESTAÑAS) -->
    <LinearLayout
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!-- Tab Tareas -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tareas"
                    android:textColor="@color/oscuro"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>
                <!-- Indicador Rojo -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/oscuro"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <!-- Tab Resumenes -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumenes"
                    android:textColor="@color/naranja"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>
                <!-- Línea gris inferior -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/naranja"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 3. CONTENIDO CON SCROLL -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_below="@id/tabBar"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- BARRA LATERAL IZQUIERDA PERSONALIZADA -->
            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_scroll_track" />

                <View
                    android:id="@+id/customScrollIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_scroll_indicator" />
            </FrameLayout>

            <!-- ZONA DE GRÁFICOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="Horas por tareas"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <!-- GRÁFICO BARCHART -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartHoras"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="20dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <!-- GRÁFICO PIECHART -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Estado de Tareas"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartEstado"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="20dp"
                    tools:background="#EEEEEE" />

                <!-- GRÁFICO LINECHART -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Evolución Semanal"
                    android:textColor="@color/oscuro"
                    android:textSize="18sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartProgreso"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="20dp"
                    tools:background="#EEEEEE" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>